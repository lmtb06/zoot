/* ------------Declaration of Terminals and Non Terminals Section----------- */
   
/* Terminals (tokens returned by the scanner).  */

terminal Symbol    VARIABLES, FONCTIONS, DEBUT, FIN, POINTVIRGULE, ECRIRE, EGAL, PARENTHESEOUVERTE,
PARENTHESEFERMEE, RETOURNE ;
terminal String    TYPE, CSTENTIERE, CSTBOOL, IDF ;

/* Non terminals used in the grammar section.  */

non terminal ArbreAbstrait PROG, LINST ;
non terminal Instruction INST ;
non terminal Expression EXP ;
non terminal LDECL, DECL ;

/* ----------------------------Grammar Section-------------------- */

start with PROG ;

PROG    ::=     VARIABLES LDECL:ld DEBUT  LINST:li  FIN
                {: RESULT = li ; :}
                ;

LDECL   ::=     DECL LDECL
        |
                DECL;

DECL    ::=     TYPE:t IDF:i POINTVIRGULE
                {:
                    Type typeSymbole = Type.ENTIER;
                    switch (t) {
                        case "entier" :
                            typeSymbole = Type.ENTIER;
                            break;
                        case "booleen" :
                            typeSymbole = Type.BOOLEEN;
                            break;
                    }


                    SymboleVariable s = new SymboleVariable(typeSymbole);
                    try{
                        TDS.getInstance().ajouter(new EntreeVariable(i), s);
                    } catch (DoubleDeclarationException e) {
                        GestionnaireExceptionsSemantiques.getInstance()
                                            .ajouter(new LigneDecorator(ileft + 1, e));
                    }
                    s.setDeplacement(TDS.getInstance().getTailleZoneVariables());
                    TDS.getInstance().augmenterTailleZoneVariables(4);
                :};

LINST   ::=     LINST:li  INST:i
                {: ((BlocDInstructions)li).ajouter(i) ;
                   RESULT = li ; :}
        |
                INST:i
                {: BlocDInstructions b = new BlocDInstructions(ileft + 1) ;
                   b.ajouter(i) ;
                   RESULT = b ; :}
                ;

INST    ::=     ECRIRE EXP:e POINTVIRGULE
                {: RESULT = new Ecrire(e, eleft + 1) ; :}
        |
                IDF:i EGAL EXP:e POINTVIRGULE
                {:
                    Variable v = new Variable(new EntreeVariable(i), ileft + 1);
                    RESULT = new Affectation(v, e, ileft + 1) ;
                :}
                ;
    
EXP    ::=     CSTENTIERE:c
                {: RESULT = new ConstanteEntiere(c, cleft + 1) ; :}
        |
               CSTBOOL:c
                {:
                    RESULT = new ConstanteBooleene(c, cleft + 1) ;
                :}
        |
               IDF:i
                {:
                    RESULT = new Variable(new EntreeVariable(i), ileft + 1) ;
                :}
                ;
